[Unit]
Description=SonarQube service
After=syslog.target network.target

[Service]
Type=forking

ExecStart=/home/jenkins/sonarqube-7.9.1/bin/linux-x86-64/sonar.sh start
ExecStop=/home/jenkins/sonarqube-7.9.1/bin/linux-x86-64/sonar.sh stop

User=sonar
Group=sonar
Restart=always

LimitNOFILE=65536
LimitNPROC=4096


[Install]
WantedBy=multi-user.target