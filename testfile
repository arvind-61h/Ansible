pipeline
{
    agent { label 'master'}
    stages
    {
        stage('SCM-Checkout'){
            steps{
                git branch: 'feature-1', url: 'https://github.com/arvind61h/my-game.git'
            }
        }
        stage('Build and Packaging ')
        {
            steps
            {
                sh 'mvn clean package'

            }
            post{
                success{
                    archiveArtifacts artifacts: '**/*.jar, **/*.war', followSymlinks: false
                }
            }
        }
        stage ('Deploying Artifacts to Artifacts server') {
            steps{
               rtUpload (
                    serverId: "Artifactory1",
                    spec: """{
                            "files": [
                                    {
                                        "pattern": "/*.war",
                                        "target": "libs-snapshot-local"

                                    }
                                ]
                    }""",
                    buildName: 'JOB_NAME',
                    buildNumber: 'BUILD_NUMBER'
                )
            }
        }
        stage ('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "Artifactory1"
                )
            }
        }
    }
}